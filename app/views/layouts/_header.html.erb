<% if logged_in? %>
  <%= "Hello, #{current_user.name}" %>
  <%= link_to "Home", user_path(current_user) %>
  <%= link_to "Logout", logout_path %>
<% else %>
  <%= link_to "Sign Up", new_user_path %>
  <%= link_to "Sign In", login_path %>
  <%= link_to('Log in with Facebook!', '/auth/facebook') %>
<% end %>
