<% if @recipe.errors.any? %>

  <div id="error_explanation">

    <h2>
      <%= pluralize(@recipe.errors.count, "error") %>
      prohibited this recipe from being created:
    </h2>

    <ul>
    <% @recipe.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>

  </div>
  
<% end %>

<h2>Create a New Recipe</h2>
<%= render partial: "form" %>
