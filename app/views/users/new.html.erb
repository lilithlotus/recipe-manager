<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@user.errors.count, "error") %>
      prohibited you from creating an account:
    </h2>

    <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @user do |f| %>
  <div class="field_with_errors">
  Name:

    <%= f.text_field :name %>
  </div>
  <div class="field_with_errors">
  Email:

    <%= f.text_field :email %>
  </div>
  <div class="field_with_errors">
  Password:

    <%= f.password_field :password %>
  </div>
  <%= f.submit "Submit" %>
<% end %>
